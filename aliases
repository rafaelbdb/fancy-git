alias fancygit="sh ~/.fancy-git/commands.sh $1"
alias gs="clear && git status"
alias ga="sh ~/.fancy-git/alias_functions/ga.sh"
alias gap="git add -p"
alias gaa="sh ~/.fancy-git/alias_functions/gaa.sh"
alias gd="sh ~/.fancy-git/alias_functions/gd.sh"
alias gcm="git commit -v"
alias gcmm="git commit -m"
alias gpl=". ~/.fancy-git/alias_functions/gpl.sh && run"
alias gpla=". ~/.fancy-git/alias_functions/gpla.sh && run"
alias gps="git push"
alias gplo=". ~/.fancy-git/alias_functions/gplo.sh && run"
alias gpso="git push origin"
alias gplob=". ~/.fancy-git/alias_functions/gplob.sh && run"
alias gpsob="sh ~/.fancy-git/alias_functions/gpsob.sh"
alias gck="sh ~/.fancy-git/alias_functions/gck.sh"
alias gckb="git checkout"
alias gckbt="sh ~/.fancy-git/alias_functions/gckbt.sh"
alias gcb="git checkout -b"
alias ggdb="git branch -D" # gdb would overwrite the "GNU Debug"
alias gdbr="git push origin --delete"
alias grb="sh ~/.fancy-git/alias_functions/grb.sh"
alias grba="sh ~/.fancy-git/alias_functions/grba.sh"
alias gl="git log"
alias glp="sh ~/.fancy-git/alias_functions/glp.sh"
alias gdof="find . -name "*.orig" | xargs rm -rf"
alias gfi="git update-index --assume-unchanged"
alias gurl="sh ~/.fancy-git/alias_functions/gurl.sh"
alias guser="sh ~/.fancy-git/alias_functions/guser.sh"
alias gst="git stash"
alias gstl="git stash list --color=always --format='%gd: %C(bold) %>(14)%Cgreen%cr %C(red)%gs'"
alias gstm="git stash save"
alias gstw="sh ~/.fancy-git/alias_functions/gstw.sh"
alias gsta="sh ~/.fancy-git/alias_functions/gsta.sh"
alias gstd="sh ~/.fancy-git/alias_functions/gstd.sh"
alias gg="sh ~/.fancy-git/alias_functions/gg.sh"
alias gu="git reset HEAD"
alias pve="sh ~/.fancy-git/alias_functions/pve.sh"
